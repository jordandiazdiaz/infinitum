# Server Configuration
PORT=5000
NODE_ENV=development

# Database
MONGODB_URI=mongodb://localhost:27017/sevem

# JWT
JWT_SECRET=your_jwt_secret_key_here
JWT_EXPIRE=30d

# Email Configuration (Nodemailer)
EMAIL_HOST=smtp.gmail.com
EMAIL_PORT=587
EMAIL_USER=your_email@gmail.com
EMAIL_PASSWORD=your_app_password

# WhatsApp Business API
WHATSAPP_API_URL=https://graph.facebook.com/v18.0
WHATSAPP_ACCESS_TOKEN=your_whatsapp_token
WHATSAPP_PHONE_NUMBER_ID=your_phone_number_id

# Facebook & Instagram
FACEBOOK_PAGE_ACCESS_TOKEN=your_facebook_page_token
INSTAGRAM_ACCESS_TOKEN=your_instagram_token

# Google Calendar API
GOOGLE_CLIENT_ID=your_google_client_id
GOOGLE_CLIENT_SECRET=your_google_client_secret
GOOGLE_REDIRECT_URI=http://localhost:5000/auth/google/callback

# Electronic Invoicing (Peru - SUNAT)
SUNAT_API_URL=https://api.sunat.gob.pe
SUNAT_RUC=your_ruc_number
SUNAT_USERNAME=your_sunat_username
SUNAT_PASSWORD=your_sunat_password
SUNAT_CERTIFICATE_PATH=./certificates/certificate.pfx
SUNAT_CERTIFICATE_PASSWORD=your_certificate_password

# Frontend URL
FRONTEND_URL=http://localhost:3000

# Chatbot Configuration
CHATBOT_ENABLE=true
CHATBOT_LANGUAGE=es
CHATBOT_GREETING=¡Hola! Soy el bot de SEVEM. ¿En qué puedo ayudarte?
