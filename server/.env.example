# Server Configuration
PORT=5000
NODE_ENV=production

# MongoDB - Railway te dará esta URL automáticamente
MONGODB_URI=mongodb://mongo:27017/sevem

# JWT Configuration
JWT_SECRET=cambia-este-secret-por-algo-super-seguro-en-produccion
JWT_EXPIRE=30d

# Email (SMTP) - Configurar con tus credenciales
SMTP_HOST=smtp.gmail.com
SMTP_PORT=587
SMTP_USER=tu-email@gmail.com
SMTP_PASSWORD=tu-app-password
FROM_EMAIL=noreply@sevem.com
FROM_NAME=SEVEM Platform

# SUNAT - Configurar con tus credenciales reales
SUNAT_USER=tu-usuario-sol
SUNAT_PASSWORD=tu-clave-sol
SUNAT_CLIENT_ID=tu-client-id-api
SUNAT_CLIENT_SECRET=tu-client-secret-api
SUNAT_ENVIRONMENT=production

# Google Calendar - Obtener de Google Cloud Console
GOOGLE_CLIENT_ID=tu-google-client-id.apps.googleusercontent.com
GOOGLE_CLIENT_SECRET=tu-google-client-secret
GOOGLE_REDIRECT_URI=https://tu-dominio.railway.app/auth/google/callback

# Frontend URL - Railway te dará esta URL
CLIENT_URL=https://tu-frontend.railway.app
FRONTEND_URL=https://tu-frontend.railway.app
